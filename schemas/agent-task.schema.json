{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/example/ingest-relay/schemas/agent-task.schema.json",
  "title": "Agent Task Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "task_id",
    "title",
    "owner_role",
    "risk_tier",
    "inputs",
    "acceptance_criteria",
    "artifacts"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]{3,64}$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "owner_role": {
      "type": "string",
      "enum": [
        "planner",
        "implementer",
        "test_eval",
        "docs",
        "security",
        "release"
      ]
    },
    "risk_tier": {
      "type": "string",
      "enum": ["tier_0", "tier_1", "tier_2", "tier_3"]
    },
    "inputs": {
      "type": "array",
      "items": {"type": "string"}
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"}
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "task_md",
        "changes_md",
        "test_evidence_md",
        "docs_evidence_md",
        "risk_tier_md"
      ],
      "properties": {
        "task_md": {"type": "string"},
        "changes_md": {"type": "string"},
        "test_evidence_md": {"type": "string"},
        "docs_evidence_md": {"type": "string"},
        "risk_tier_md": {"type": "string"}
      }
    }
  }
}
