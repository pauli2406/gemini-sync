# Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/gemini_sync_bridge

# Connector discovery (optional)
# Keep user-specific connectors outside this repo and point to that directory.
CONNECTORS_DIR=connectors

# Secrets are resolved as SECRET_<UPPERCASED_SECRETREF>
SECRET_HR_DB_CREDENTIALS=postgresql+psycopg2://postgres:postgres@localhost:5432/hr
SECRET_KB_API_TOKEN=replace-me
SECRET_PERBIT_ORACLE_CREDENTIALS=oracle+oracledb://user:password@host:1521/?service_name=SERVICE_NAME

# GCS and Gemini
GOOGLE_CLOUD_PROJECT=my-project
GEMINI_INGESTION_DRY_RUN=true

# Optional outbound proxy and custom CA trust
# HTTP_PROXY=http://proxy.example:8080
# HTTPS_PROXY=http://proxy.example:8443
# NO_PROXY=localhost,127.0.0.1,.internal
# SSL_CERT_FILE=/etc/ssl/certs/company-ca-bundle.pem
# REQUESTS_CA_BUNDLE=/etc/ssl/certs/company-ca-bundle.pem

# Alerts and logging
TEAMS_WEBHOOK_URL=
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
SPLUNK_RUN_URL_TEMPLATE=
KESTRA_RUN_URL_TEMPLATE=
MANAGED_SECRET_ENCRYPTION_KEY=dev-only-change-me
GITHUB_TOKEN=
# Connector-config repository targeted by Studio PR proposals.
GITHUB_REPO=
GITHUB_BASE_BRANCH=main
LOG_LEVEL=INFO
